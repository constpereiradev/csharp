@{
    ViewData["Title"] = "Projects";
}

<div class="row">
   
    <div class="col-sm-12 mt-5" style="height: 1000vh;">
        <div class="row justify-content-center d-flex m-3">
            <div class="col-sm-6 border rounded fs-4 fw-medium text-justify p-3">
                Área de projetos
                <br>
                <span class="fs-6 fw-normal text-center">
                    Organize seus projetos feitos e utilize essa área de portfólio.

                </span>
            </div>
        </div>
        <div class="row justify-content-center d-flex m-3" style="font-size: 80%;">
            <div class="col-sm-6 rounded border text-justify">
                <div class="row justify-content-start d-flex m-3">
                    <div class="col-sm-1 justify-content-start d-flex">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                            class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
