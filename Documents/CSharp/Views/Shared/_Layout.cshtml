<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSharp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSharp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class=" bg-body-white">
            <div class="col-sm-3 position-fixed">
                <div class="row ">
                    <div class="col-sm-10 pt-3 bg-white border p-2 rounded collapse collapse-horizontal"
                        id="hamburguerMenu" style="height: 100vh">
                        <div class="row mb-3 ps-3 pe-3">
                            <div class="col-sm-9">
                                <div <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="CSharp">
                                    <img src="https://assets-global.website-files.com/6047a9e35e5dc54ac86ddd90/63065002cd563e1cd1cead28_eaadfe64.png"
                                        alt="Bootstrap" width="40" height="40" class="pointer">
                                    </a>
                                </div>
                            </div>
                            <div class="col-sm-1 mt-1">
                                <div data-bs-toggle="collapse" data-bs-target="#hamburguerMenu" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                        class="bi bi-x-lg pointer " viewBox="0 0 16 16">
                                        <path
                                            d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                                    </svg>
                                </div>
                            </div>

                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <ul class="list-group list-group-flush">
                                    <a class="navbar-brand" asp-area="" asp-controller="Project" asp-action="Index">
                                        <li
                                            class="pointer list-group-item justify-content-between align-items-start d-flex">
                                            Projetos
                                            <span class="badge text-bg-primary rounded-pill">14</span>
                                        </li>
                                    </a>
                                    <li
                                        class="pointer list-group-item justify-content-between align-items-start d-flex">
                                        Artigos
                                        <span class="badge text-bg-primary rounded-pill">8</span>
                                    </li>
                                    <li class="list-group-item pointer">
                                        <span data-bs-toggle="collapse" data-bs-target="#anotacoes"
                                            aria-expanded="false">Anotações</span>
                                        <ul class="list-group list-group-flush collapse" id="anotacoes">
                                            <a class="navbar-brand" asp-area="" asp-controller="Notes"
                                                asp-action="Studies">

                                                <li
                                                    class="list-group-item justify-content-between align-items-start d-flex">
                                                    Estudos
                                                    <span class="badge text-bg-primary rounded-pill">10</span>
                                                </li>
                                            </a>
                                            <a class="navbar-brand" asp-area="" asp-controller="Notes"
                                                asp-action="Draft">
                                                <li
                                                    class="list-group-item justify-content-between align-items-start d-flex">
                                                    Rascunhos
                                                    <span class="badge text-bg-primary rounded-pill">4</span>
                                                </li>
                                            </a>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 pt-2">
                        <div class="btn" data-bs-toggle="collapse" data-bs-target="#hamburguerMenu"
                            aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                                class="bi bi-list" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CSharp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
